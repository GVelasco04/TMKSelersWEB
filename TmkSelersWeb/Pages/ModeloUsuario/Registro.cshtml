@page
@model TmkSelersWeb.Pages.ModeloUsuario.RegistroModel
<link href="~/css/crear.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/eb675fee69.js" crossorigin="anonymous"></script>
@{
    ViewData["Title"] = "Registro";
}

<body>
    <div class="container">
        <div class="container-formm">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h2>Registrese</h2>
                <div class="container-input">
                    <i class="fa-solid fa-address-card"></i>
                    <input type="text" asp-for="Usuario.UserName" class="form-control" placeholder="UserName" />
                    <span asp-validation-for="Usuario.UserName" class="text-danger"></span>
                </div>
                <div class="container-input">
                    <i class="fa-solid fa-address-card"></i>
                    <input type="text" asp-for="Usuario.Nombre" class="form-control" placeholder="Nombre" />
                    <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                </div>
                <div class="container-input">
                    <i class="fa-solid fa-address-card"></i>
                    <input type="text" asp-for="Usuario.Apellido" class="form-control" placeholder="Apellido" />
                    <span asp-validation-for="Usuario.Apellido" class="text-danger"></span>
                </div>
                <div class="container-input">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="email" asp-for="Usuario.Correo" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
                </div>
                <div class="container-input">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" asp-for="Usuario.Clave" class="form-control" placeholder="Clave"/>
                    <span asp-validation-for="Usuario.Clave" class="text-danger"></span>
                </div>
                <div class="container-input">
                    <i class="fa-solid fa-users"></i>
                    <select asp-for="Usuario.TipoUsuario" class="form-control" asp-items="ViewBag.TipoUsuario"></select>
                </div>


                 <button class="button">Guardar</button>
            </form>
        </div>
    </div>

</body>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
