@page
@model TmkSelersWeb.Pages.ModeloUsuario.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Edit</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Usuario.UserId" />
            <div class="form-group">
                <label asp-for="Usuario.UserName" class="control-label"></label>
                <input asp-for="Usuario.UserName" class="form-control" />
                <span asp-validation-for="Usuario.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Nombre" class="control-label"></label>
                <input asp-for="Usuario.Nombre" class="form-control" />
                <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Apellido" class="control-label"></label>
                <input asp-for="Usuario.Apellido" class="form-control" />
                <span asp-validation-for="Usuario.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Correo" class="control-label"></label>
                <input asp-for="Usuario.Correo" class="form-control" />
                <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Clave" class="control-label"></label>
                <input asp-for="Usuario.Clave" class="form-control" />
                <span asp-validation-for="Usuario.Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.TipoUsuario" class="control-label"></label>
                <select asp-for="Usuario.TipoUsuario" class="form-control" asp-items="ViewBag.TipoUsuario"></select>
                <span asp-validation-for="Usuario.TipoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.AceptadoXAdmin" class="control-label"></label>
                <input asp-for="Usuario.AceptadoXAdmin" class="form-control" />
                <span asp-validation-for="Usuario.AceptadoXAdmin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Listar">Ver Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
